{
  "name": "clnode",
  "version": "0.1.0",
  "description": "Claude Code hook monitoring daemon with DuckDB + Hono",
  "type": "module",
  "bin": {
    "clnode": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/server/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "dev:web": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc",
    "build:web": "vite build",
    "start": "node dist/server/index.js",
    "cli": "node dist/cli/index.js"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.27.0",
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@tailwindcss/vite": "^4.1.18",
    "commander": "^14.0.3",
    "duckdb-async": "^1.4.2",
    "hono": "^4.11.7",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tailwindcss": "^4.1.18",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
